name: auto-assign-author

on:
  pull_request:
    types: [opened]

jobs:
  assign:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write
    env:
      GH_TOKEN: ${{ github.token }}
    steps:
      - name: Assign author as assignee
        run: gh pr edit ${{ github.event.pull_request.number }} --add-assignee ${{ github.actor }}
